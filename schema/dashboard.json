{
  "id": "/Dashboard",
  "type": "object",
  "properties": {
    "slug": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 90,
      "pattern": "^[-a-z0-9]+$"
    },
    "dashboard-type": {
      "type": "string",
      "required": true,
      "enum": [
        "transaction",
        "high-volume-transaction",
        "service-group",
        "agency",
        "department",
        "content",
        "other"
      ]
    },
    "page-type": {
      "type": "string",
      "required": true,
      "enum": ["dashboard"]
    },
    "published": {
      "type": "boolean",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false,
      "minLength": 1,
      "maxLength": 500
    },
    "description-extra": {
      "type": "string",
      "required": false,
      "minLength": 1,
      "maxLength": 400
    },
    "costs": {
      "type": "string",
      "required": false,
      "minLength": 1,
      "maxLength": 1500
    },
    "other-notes": {
      "type": "string",
      "required": false,
      "minLength": 1,
      "maxLength": 700
    },
    "customer-type": {
      "type": "string",
      "required": false,
      "oneOf": [
        { "enum": ["Business", "Individuals"] }
      ]
    },
    "business-model": {
      "type": "string",
      "required": false,
      "oneOf": [
        { "enum": ["Department budget", "Fees and charges", "Taxpayers"] }
      ]
    },
    "department": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "required": true
        },
        "abbr": {
          "type": "string",
          "required": true
        }
      }
    },
    "agency": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "required": true
        },
        "abbr": {
          "type": "string",
          "required": true
        }
      }
    },
    "relatedPages": {
      "type": "object",
      "properties": {
        "transaction": {
          "$ref": "#/definitions/link"
        },
        "improve-dashboard-message": {
          "type": "boolean"
        },
        "other": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/link"
          }
        }
      }
    },
    "strapline": {
      "type": "string",
      "required": true,
      "enum": [
        "Dashboard",
        "Service dashboard",
        "Content dashboard",
        "Performance",
        "Policy dashboard",
        "Public sector purchasing dashboard"
      ]
    },
    "tagline": {
      "type": "string",
      "required": false,
      "minLength": 1,
      "maxLength": 400
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "link": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "required": true,
          "minLength": 2,
          "maxLength": 90
        },
        "url": {
          "type": "string",
          "required": true,
          "format": "uri"
        }
      }
    }
  }
}
